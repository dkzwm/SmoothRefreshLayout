<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.dkzwm.smoothrefreshlayout.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WithFrameLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithTextViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithWebViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithListViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithGridViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithRecyclerViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithRecyclerViewInCoordinatorLayoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.TestOverScrollActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestQQWebStyleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestTwoLevelRefreshActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.WithViewPagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestPullToRefreshActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestReleaseToRefreshActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestNextRefreshAtOnceActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestMaterialStyleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestQQActivityStyleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.TestNestedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>